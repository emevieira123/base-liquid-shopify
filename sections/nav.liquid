<style>
.navbar-flutuante {
  position: fixed;
  top: 50%;
  right: 20px;
  transform: translateY(-50%);
  width: 280px;
  height: auto;
  max-height: 95vh;
  background: rgba(20, 20, 24, 0.95);
  backdrop-filter: blur(15px);
  border: 1px solid #189DC0;
  border-radius: 15px;
  z-index: 1000;
  overflow: visible;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}

.menu-container {
  padding: 8px 0;
}

.menu-section {
  margin-bottom: 15px;
  border-bottom: 1px solid rgba(24, 157, 192, 0.3);
  padding-bottom: 8px;
}

.menu-section:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.section-title {
  color: #ffffff;
  font-family: var(--bold);
  font-size: 14px;
  margin: 0 0 5px 25px;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-weight: 700;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 8px 25px;
  color: #ffffff;
  text-decoration: none;
  transition: all 0.3s ease;
  margin: 2px 15px;
  border-radius: 10px;
  position: relative;
}

.menu-item:hover {
  background: rgba(24, 157, 192, 0.15);
  transform: translateX(-5px);
}

.menu-item-active {
  background: rgba(24, 157, 192, 0.25);
  border-left: 3px solid #189DC0;
}

.menu-item-active span {
  color: #189DC0;
  font-weight: 600;
}

.menu-icon {
  width: 18px;
  height: 18px;
  margin-right: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.menu-icon img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  filter: brightness(0) invert(1);
}

.menu-item-active .menu-icon img {
  filter: brightness(0) invert(1) sepia(1) saturate(5) hue-rotate(200deg);
}

.menu-item span {
  font-family: var(--regular);
  font-size: 13px;
  color: #ffffff;
  transition: color 0.3s ease;
  white-space: nowrap;
}

.menu-item:hover span {
  color: #189DC0;
}



/* Responsividade */
@media screen and (max-width: 1200px) {
  .navbar-flutuante {
    right: 15px;
    width: 250px;
  }
}

@media screen and (max-width: 768px) {
  .navbar-flutuante {
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    transform: none;
    width: 100%;
    max-height: 100vh;
    border-radius: 0;
    border: none;
    border-bottom: 2px solid #189DC0;
  }
  
  .menu-container {
    padding: 15px 0;
  }
  
  .menu-section {
    margin-bottom: 20px;
    padding-bottom: 15px;
  }
  
  .menu-item {
    padding: 10px 20px;
    margin: 2px 10px;
  }
  
  .section-title {
    margin: 0 0 10px 20px;
    font-size: 14px;
  }
}

/* Animação de entrada */
@keyframes slideInFromRight {
  from {
    opacity: 0;
    transform: translateX(100px) translateY(-50%);
  }
  to {
    opacity: 1;
    transform: translateX(0) translateY(-50%);
  }
}

.navbar-flutuante {
  animation: slideInFromRight 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* Efeito de hover para destacar */
.navbar-flutuante:hover {
  transform: translateY(-50%) scale(1.02);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
  transition: all 0.3s ease;
}

/* Animação dos itens do menu em cascata */
.menu-item {
  animation: fadeInUp 0.6s ease-out forwards;
  opacity: 0;
  transform: translateY(20px);
}

.menu-item:nth-child(1) { animation-delay: 0.2s; }
