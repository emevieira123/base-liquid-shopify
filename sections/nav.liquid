@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Seleciona todos os itens do menu
  const menuItems = document.querySelectorAll('.menu-item');
  
  // Função para remover a classe ativa de todos os itens
  function removeActiveClass() {
    menuItems.forEach(item => {
      item.classList.remove('menu-item-active');
    });
  }
  
  // Adiciona evento de clique para cada item do menu
  menuItems.forEach(item => {
    item.addEventListener('click', function(e) {
      // Remove a classe ativa de todos os itens
      removeActiveClass();
      
      // Adiciona a classe ativa ao item clicado
      this.classList.add('menu-item-active');
      
      // Opcional: salva o estado no localStorage para persistir entre páginas
      localStorage.setItem('activeMenuItem', this.getAttribute('href'));
    });
  });
  
  // Restaura o estado ativo baseado na URL atual ou localStorage
  function restoreActiveState() {
    const currentPath = window.location.pathname;
    const savedPath = localStorage.getItem('activeMenuItem');
    
    // Procura por um item que corresponda à URL atual
    let activeItem = null;
    
    menuItems.forEach(item => {
      const href = item.getAttribute('href');
      if (href === currentPath || href === savedPath) {
        activeItem = item;
      }
    });
    
    // Se encontrou um item correspondente, marca como ativo
    if (activeItem) {
      removeActiveClass();
      activeItem.classList.add('menu-item-active');
    }
  }
  
  // Executa a restauração do estado
  restoreActiveState();
});
</script>

